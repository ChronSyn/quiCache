{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": "./",
    "rootDir": "./src/",
    "outDir": "./build/",
    "declarationDir": "./build/",
    "declaration": true,
    "paths": {
      "@Root/*": ["./*"],
      "@Data/*": ["data/*"],
      "@Modules/*": ["modules/*"],
      "@Routers/*": ["modules/routers/*"],
      "@Constants/*": ["constants/*"],
      "@Interfaces/*": ["interfaces/*"]
    },
    "plugins": []
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}